<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.salat.viralcam.app.activities.ComputeShaderActivity"
    tools:showIn="@layout/activity_compute_shader" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:paddingTop="0dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/imageView2" />

        <Spinner
            android:id="@+id/image_id_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_alignTop="@id/imageView2"/>

        <Spinner
            android:id="@+id/image_scale_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_below="@id/image_id_spinner"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:id="@+id/imageView3"
            android:layout_toRightOf="@id/imageView2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/imageView4"
            android:layout_below="@id/imageView3"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/imageView5"
            android:layout_below="@id/imageView4"
            android:layout_marginBottom="72dp" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>